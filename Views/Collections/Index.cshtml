@model List<Kumburgaz.Web.Models.Collection>
@using Kumburgaz.Web.Services
@{
    ViewData["Title"] = "Tahsilatlar";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Tahsilatlar</h2>
    <a class="btn btn-primary" asp-action="Create">Yeni Tahsilat</a>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Tarih</th>
            <th>Daire</th>
            <th>Grup</th>
            <th>Tutar</th>
            <th>Kanal</th>
            <th>Ref</th>
            <th>Not</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Date.ToString("dd.MM.yyyy")</td>
            <td>@BillingGroupDisplayHelper.UnitDisplay(item.BillingGroup)</td>
            <td>@item.BillingGroup?.Name</td>
            <td>@item.Amount.ToString("N2")</td>
            <td>@item.PaymentChannel</td>
            <td>@item.ReferenceNo</td>
            <td>@item.Note</td>
            <td class="d-flex gap-1">
                <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@item.Id">Duzenle</a>
                <form asp-action="Delete" asp-route-id="@item.Id" method="post"
                      onsubmit="return confirm('Bu tahsilat kaydi silinsin mi?');">
                    @Html.AntiForgeryToken()
                    <button class="btn btn-sm btn-outline-danger" type="submit">Sil</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
