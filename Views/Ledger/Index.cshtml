@model List<Kumburgaz.Web.Models.LedgerTransaction>
@using Kumburgaz.Web.Models
@using Kumburgaz.Web.Services
@{
    ViewData["Title"] = "Gelir Gider";
    var collections = ViewBag.Collections as List<Collection> ?? [];
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Gelir Gider İşlem Listesi</h2>
    <div class="d-flex gap-2">
        <a class="btn btn-outline-secondary" asp-action="ExportCsv">CSV Dışa Aktar</a>
        <a class="btn btn-primary" asp-action="Create">Yeni İşlem</a>
    </div>
</div>

@if (TempData["ImportSuccess"] is string successMessage)
{
    <div class="alert alert-success">@successMessage</div>
}
@if (TempData["ImportError"] is string errorMessage)
{
    <div class="alert alert-danger">@errorMessage</div>
}
@if (TempData["ActionSuccess"] is string actionSuccess)
{
    <div class="alert alert-success">@actionSuccess</div>
}
@if (TempData["ActionError"] is string actionError)
{
    <div class="alert alert-danger">@actionError</div>
}

<form asp-action="ImportCsv" method="post" enctype="multipart/form-data" class="card card-body mb-3">
    <div class="row g-2 align-items-end">
        <div class="col-md-7">
            <label class="form-label mb-1">Gelir-Gider CSV Yükle</label>
            <input type="file" name="file" accept=".csv,text/csv" class="form-control" />
            <div class="form-text">Kolonlar: IncomeExpenseCategoryId, Date, Amount, PaymentChannel, Description</div>
        </div>
        <div class="col-md-5">
            <button type="submit" class="btn btn-outline-primary">CSV ile Ekle</button>
        </div>
    </div>
</form>

<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>Tarih</th>
        <th>Tür</th>
        <th>Kategori</th>
        <th>Tutar</th>
        <th>Kanal</th>
        <th>Açıklama</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var row in Model)
    {
        <tr>
            <td>@row.Date.ToString("dd.MM.yyyy")</td>
            <td>@CategoryTypeHelper.Display(row.IncomeExpenseCategory?.Type)</td>
            <td>@row.IncomeExpenseCategory?.Name</td>
            <td>@row.Amount.ToString("N2")</td>
            <td>@row.PaymentChannel</td>
            <td>@row.Description</td>
            <td class="d-flex gap-1">
                <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@row.Id">Düzenle</a>
                <form asp-action="Delete" asp-route-id="@row.Id" method="post"
                      onsubmit="return confirm('Bu işlem silinsin mi?');">
                    @Html.AntiForgeryToken()
                    <button class="btn btn-sm btn-outline-danger" type="submit">Sil</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>

<div class="d-flex justify-content-between align-items-center mt-5 mb-3">
    <h3 class="mb-0">Aidat Tahsilatları (Gelir)</h3>
    <div class="d-flex gap-2">
        <a class="btn btn-outline-secondary" asp-controller="Collections" asp-action="ExportCsv">CSV Dışa Aktar</a>
        <a class="btn btn-primary" asp-controller="Collections" asp-action="Create">Yeni Tahsilat</a>
    </div>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Tarih</th>
            <th>Daire</th>
            <th>Grup</th>
            <th>Tutar</th>
            <th>Kanal</th>
            <th>Ref</th>
            <th>Not</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in collections)
    {
        <tr>
            <td>@item.Date.ToString("dd.MM.yyyy")</td>
            <td>@BillingGroupDisplayHelper.UnitDisplay(item.BillingGroup)</td>
            <td>@item.BillingGroup?.Name</td>
            <td>@item.Amount.ToString("N2")</td>
            <td>@item.PaymentChannel</td>
            <td>@item.ReferenceNo</td>
            <td>@item.Note</td>
            <td class="d-flex gap-1">
                <a class="btn btn-sm btn-outline-secondary" asp-controller="Collections" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
                <form asp-controller="Collections" asp-action="Delete" asp-route-id="@item.Id" method="post"
                      onsubmit="return confirm('Bu tahsilat kaydı silinsin mi?');">
                    @Html.AntiForgeryToken()
                    <button class="btn btn-sm btn-outline-danger" type="submit">Sil</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
