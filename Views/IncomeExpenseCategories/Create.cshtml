@model Kumburgaz.Web.Models.IncomeExpenseCategory
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Yeni Gelir Gider Türü";
}

<h2>Yeni Gelir Gider Türü</h2>

<form asp-action="Create" method="post" class="mt-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="Type" class="form-label">Tur</label>
        <select asp-for="Type" asp-items="(IEnumerable<SelectListItem>)ViewBag.Types" class="form-select"></select>
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-check mb-3">
        <input asp-for="Active" class="form-check-input" />
        <label asp-for="Active" class="form-check-label"></label>
    </div>
    <button class="btn btn-primary" type="submit">Kaydet</button>
    <a class="btn btn-outline-secondary" asp-action="Index">Vazgeç</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
