@model List<Kumburgaz.Web.Models.Collection>
@{
    ViewData["Title"] = "Tahsilatlar";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Tahsilatlar</h2>
    <a class="btn btn-primary" asp-action="Create">Yeni Tahsilat</a>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Tarih</th>
            <th>Grup</th>
            <th>Tutar</th>
            <th>Kanal</th>
            <th>Ref</th>
            <th>Not</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Date.ToString("dd.MM.yyyy")</td>
            <td>@item.BillingGroup?.Name</td>
            <td>@item.Amount.ToString("N2")</td>
            <td>@item.PaymentChannel</td>
            <td>@item.ReferenceNo</td>
            <td>@item.Note</td>
        </tr>
    }
    </tbody>
</table>
