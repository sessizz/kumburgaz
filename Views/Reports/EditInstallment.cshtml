@model Kumburgaz.Web.Models.DuesInstallmentEditViewModel
@{
    ViewData["Title"] = "Borç Düzenle";
    var cancelUrl = string.IsNullOrWhiteSpace(Model.ReturnUrl)
        ? Url.Action("DuesDebt", "Reports")
        : Model.ReturnUrl;
}

<h2>Borç Düzenle</h2>

<div class="alert alert-secondary">
    <div><strong>Daire:</strong> @Model.UnitDisplay</div>
    <div><strong>Grup:</strong> @Model.BillingGroupName</div>
    <div><strong>Ödenmiş:</strong> @Model.PaidAmount.ToString("N2")</div>
    <div><strong>Kalan:</strong> @Model.RemainingAmount.ToString("N2")</div>
</div>

<form asp-action="EditInstallment" method="post" class="mt-3">
    @Html.AntiForgeryToken()
    <input asp-for="Id" type="hidden" />
    <input asp-for="ReturnUrl" type="hidden" />
    <input asp-for="PaidAmount" type="hidden" />
    <input asp-for="UnitDisplay" type="hidden" />
    <input asp-for="BillingGroupName" type="hidden" />
    <input asp-for="RemainingAmount" type="hidden" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row">
        <div class="col-md-4 mb-3">
            <label asp-for="Period" class="form-label">Dönem</label>
            <input asp-for="Period" class="form-control" />
            <span asp-validation-for="Period" class="text-danger"></span>
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="DueDate" class="form-label">Vade Tarihi</label>
            <input asp-for="DueDate" class="form-control" type="date" />
            <span asp-validation-for="DueDate" class="text-danger"></span>
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="Amount" class="form-label">Borç Tutarı</label>
            <input asp-for="Amount" class="form-control" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
    </div>

    <button class="btn btn-primary" type="submit">Güncelle</button>
    <a class="btn btn-outline-secondary" href="@cancelUrl">Vazgeç</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
