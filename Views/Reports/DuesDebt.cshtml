@model List<Kumburgaz.Web.Models.DuesDebtReportRow>
@using Kumburgaz.Web.Models
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Aidat Borç Raporu";
    var query = (DuesDebtReportQuery)ViewBag.Query;
    var returnUrl = $"{Context.Request.Path}{Context.Request.QueryString}";
}

<h2>Aidat Borç Raporu</h2>

@if (TempData["Success"] is string successMessage)
{
    <div class="alert alert-success">@successMessage</div>
}
@if (TempData["Error"] is string errorMessage)
{
    <div class="alert alert-danger">@errorMessage</div>
}

<form method="get" class="row g-2 mb-3">
    <div class="col-md-2">
        <label class="form-label">Dönem</label>
        <input class="form-control" name="Period" value="@query.Period" />
    </div>
    <div class="col-md-3">
        <label class="form-label">Blok</label>
        <select class="form-select" name="BlockId" asp-items="(IEnumerable<SelectListItem>)ViewBag.Blocks">
            <option value="">Tüm</option>
        </select>
    </div>
    <div class="col-md-3">
        <label class="form-label">Aidat Tipi</label>
        <select class="form-select" name="DuesTypeId" asp-items="(IEnumerable<SelectListItem>)ViewBag.DuesTypes">
            <option value="">Tüm</option>
        </select>
    </div>
    <div class="col-md-4">
        <label class="form-label">Aidatlandırma Grubu</label>
        <select class="form-select" name="BillingGroupId" asp-items="(IEnumerable<SelectListItem>)ViewBag.BillingGroups">
            <option value="">Tüm</option>
        </select>
    </div>
    <div class="col-12 d-flex gap-2">
        <button class="btn btn-primary" type="submit">Filtrele</button>
        <a class="btn btn-outline-success" asp-action="DuesDebtExcel"
           asp-route-Period="@query.Period"
           asp-route-BlockId="@query.BlockId"
           asp-route-DuesTypeId="@query.DuesTypeId"
           asp-route-BillingGroupId="@query.BillingGroupId">Excel</a>
        <a class="btn btn-outline-danger" asp-action="DuesDebtPdf"
           asp-route-Period="@query.Period"
           asp-route-BlockId="@query.BlockId"
           asp-route-DuesTypeId="@query.DuesTypeId"
           asp-route-BillingGroupId="@query.BillingGroupId">PDF</a>
    </div>
</form>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Dönem</th>
            <th>Daire/Birleşik</th>
            <th>Aidat Tipi</th>
            <th>Aidat Grubu</th>
            <th>Tutar</th>
            <th>Kalan</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var row in Model)
    {
        <tr>
            <td>@row.Period</td>
            <td>@row.UnitDisplay</td>
            <td>@row.DuesTypeName</td>
            <td>@row.BillingGroupName</td>
            <td>@row.Amount.ToString("N2")</td>
            <td>@row.RemainingAmount.ToString("N2")</td>
            <td class="d-flex gap-1">
                @if (row.InstallmentId.HasValue)
                {
                    <a class="btn btn-sm btn-outline-secondary"
                       asp-action="EditInstallment"
                       asp-route-id="@row.InstallmentId.Value"
                       asp-route-returnUrl="@returnUrl">Düzenle</a>
                    <form asp-action="DeleteInstallment" method="post"
                          onsubmit="return confirm('Bu borç kaydı silinsin mi?');">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@row.InstallmentId.Value" />
                        <input type="hidden" name="returnUrl" value="@returnUrl" />
                        <button class="btn btn-sm btn-outline-danger" type="submit">Sil</button>
                    </form>
                }
            </td>
        </tr>
    }
    </tbody>
</table>
