@model Kumburgaz.Web.Models.CollectionCreateViewModel
@{
    ViewData["Title"] = "Tahsilat Duzenle";
}

<h2>Tahsilat Duzenle</h2>

<form asp-action="Edit" asp-route-id="@ViewBag.CollectionId" method="post" class="mt-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="UnitId" class="form-label">Daire</label>
        <select asp-for="UnitId" asp-items="Model.UnitOptions" class="form-select"></select>
        <span asp-validation-for="UnitId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="BillingGroupId" class="form-label">Aidatlandirma Grubu</label>
        <select asp-for="BillingGroupId" asp-items="Model.BillingGroupOptions" class="form-select"></select>
        <span asp-validation-for="BillingGroupId" class="text-danger"></span>
    </div>
    <div class="row">
        <div class="col-md-4 mb-3">
            <label asp-for="Date" class="form-label"></label>
            <input asp-for="Date" class="form-control" type="date" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="Amount" class="form-label"></label>
            <input asp-for="Amount" class="form-control" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="PaymentChannel" class="form-label"></label>
            <select asp-for="PaymentChannel" asp-items="Html.GetEnumSelectList<Kumburgaz.Web.Models.PaymentChannel>()" class="form-select"></select>
            <span asp-validation-for="PaymentChannel" class="text-danger"></span>
        </div>
    </div>
    <div class="mb-3">
        <label asp-for="ReferenceNo" class="form-label"></label>
        <input asp-for="ReferenceNo" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Note" class="form-label"></label>
        <textarea asp-for="Note" class="form-control"></textarea>
    </div>
    <button class="btn btn-primary" type="submit">Guncelle</button>
    <a class="btn btn-outline-secondary" asp-action="Index">Vazgec</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
