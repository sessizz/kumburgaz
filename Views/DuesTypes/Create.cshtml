@model Kumburgaz.Web.Models.DuesType
@{
    ViewData["Title"] = "Yeni Aidat Tipi";
}

<h2>Yeni Aidat Tipi</h2>

<form asp-action="Create" method="post" class="mt-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Amount" class="form-label"></label>
        <input asp-for="Amount" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>
    <div class="form-check mb-3">
        <input asp-for="Active" class="form-check-input" />
        <label asp-for="Active" class="form-check-label"></label>
    </div>
    <button class="btn btn-primary" type="submit">Kaydet</button>
    <a class="btn btn-outline-secondary" asp-action="Index">Vazgec</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
