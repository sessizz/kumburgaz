@model List<Kumburgaz.Web.Models.DuesGenerationPreviewItem>
@{
    ViewData["Title"] = "Dönem Borç Üretimi";
}

<h2>Dönem Borç Üretimi</h2>

@if (TempData["Success"] is string success)
{
    <div class="alert alert-success">@success</div>
}
@if (TempData["Error"] is string error)
{
    <div class="alert alert-danger">@error</div>
}

<form method="get" class="row g-2 mb-3">
    <div class="col-md-3">
        <label class="form-label">Dönem (YYYY-YYYY)</label>
        <input class="form-control" name="period" value="@ViewBag.Period" />
    </div>
    <div class="col-md-2 d-flex align-items-end">
        <button class="btn btn-outline-primary w-100" type="submit">Onizleme</button>
    </div>
</form>

<form asp-action="Generate" method="post" class="mb-3">
    @Html.AntiForgeryToken()
    <input type="hidden" name="period" value="@ViewBag.Period" />
    <div class="row g-2">
        <div class="col-md-3">
            <label class="form-label">Vade Tarihi</label>
            <input class="form-control" type="date" name="dueDate" value="@(((DateTime)ViewBag.DueDate).ToString("yyyy-MM-dd"))" />
        </div>
        <div class="col-md-2 d-flex align-items-end">
            <button class="btn btn-primary w-100" type="submit">Borçlari Olustur</button>
        </div>
    </div>
</form>

<form asp-action="Delete" method="post" class="mb-3"
      onsubmit="return confirm('Bu donemin olusturulmus borclari silinsin mi?');">
    @Html.AntiForgeryToken()
    <input type="hidden" name="period" value="@ViewBag.Period" />
    <button class="btn btn-outline-danger" type="submit">Dönem Borçlarini Sil</button>
</form>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Grup</th>
            <th>Aidat Tipi</th>
            <th>Daireler</th>
            <th>Tutar</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var row in Model)
    {
        <tr>
            <td>@row.BillingGroupName</td>
            <td>@row.DuesTypeName</td>
            <td>@row.UnitsText</td>
            <td>@row.Amount.ToString("N2") TL</td>
        </tr>
    }
    </tbody>
</table>
