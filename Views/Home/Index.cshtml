@{
    ViewData["Title"] = "Panel";
}

<h2>Finansal Ozet</h2>

<div class="row g-3 mb-4">
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <div class="text-muted">Toplam Borç</div>
                <div class="h4 mb-0">@(((decimal)ViewBag.TotalDebt).ToString("N2")) TL</div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <div class="text-muted">Üretilen Aidat</div>
                <div class="h4 mb-0">@(((decimal)ViewBag.TotalGenerated).ToString("N2")) TL</div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <div class="text-muted">Tahsilat</div>
                <div class="h4 mb-0">@(((decimal)ViewBag.TotalCollections).ToString("N2")) TL</div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <div class="text-muted">Aktif Aidat Grubu</div>
                <div class="h4 mb-0">@ViewBag.BillingGroups</div>
            </div>
        </div>
    </div>
</div>

<h4>Hizli İşlemler</h4>
<div class="d-flex gap-2 flex-wrap">
    <a asp-controller="DuesTypes" asp-action="Index" class="btn btn-outline-primary">Aidat Tipleri</a>
    <a asp-controller="BillingGroups" asp-action="Index" class="btn btn-outline-primary">Aidat Gruplari</a>
    <a asp-controller="DuesGeneration" asp-action="Index" class="btn btn-outline-primary">Dönem Borç Üretimi</a>
    <a asp-controller="Collections" asp-action="Create" class="btn btn-outline-primary">Tahsilat Gir</a>
    <a asp-controller="Reports" asp-action="DuesDebt" class="btn btn-outline-primary">Aidat Borç Raporu</a>
</div>
