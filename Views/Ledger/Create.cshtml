@model Kumburgaz.Web.Models.LedgerTransactionCreateViewModel

@{
    ViewData["Title"] = "Gelir Gider İşlem";
}

<h2>Gelir Gider İşlem</h2>
<p><a asp-controller="IncomeExpenseCategories" asp-action="Index">Gelir/Gider türlerini yönet</a></p>

<form asp-action="Create" method="post" class="mt-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-4 mb-3">
            <label asp-for="Date" class="form-label"></label>
            <input asp-for="Date" class="form-control" type="date" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="IncomeExpenseCategoryId" class="form-label">Kategori</label>
            <select asp-for="IncomeExpenseCategoryId" asp-items="Model.CategoryOptions" class="form-select"></select>
            <span asp-validation-for="IncomeExpenseCategoryId" class="text-danger"></span>
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="Amount" class="form-label"></label>
            <input asp-for="Amount" class="form-control" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 mb-3">
            <label asp-for="PaymentChannel" class="form-label"></label>
            <select asp-for="PaymentChannel" asp-items="Html.GetEnumSelectList<Kumburgaz.Web.Models.PaymentChannel>()" class="form-select"></select>
        </div>
        <div class="col-md-8 mb-3">
            <label asp-for="Description" class="form-label"></label>
            <input asp-for="Description" class="form-control" />
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-action="Index" class="btn btn-outline-secondary">Vazgeç</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
