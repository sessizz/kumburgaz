@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <a class="text-sm text-slate-600 hover:text-slate-900" asp-area="Identity" asp-page="/Account/Manage/Index" title="Hesap">
        @User.Identity?.Name
    </a>
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
        <button type="submit" class="px-3 py-1.5 rounded-lg text-sm border border-slate-200 hover:bg-slate-50">Çıkış</button>
    </form>
}
else
{
    <a class="text-sm text-slate-600 hover:text-slate-900" asp-area="Identity" asp-page="/Account/Register">Kayıt Ol</a>
    <a class="px-3 py-1.5 rounded-lg text-sm border border-slate-200 hover:bg-slate-50" asp-area="Identity" asp-page="/Account/Login">Giriş</a>
}
